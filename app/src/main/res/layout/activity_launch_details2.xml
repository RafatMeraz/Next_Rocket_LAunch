<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissionDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_name"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/LaunchNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_time"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/launchTimeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_window_start"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/launchWindowStartTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_window_end"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/windowEndTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_live"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/missionWikiURLTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:textColor="#0b6078"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_tbdtime"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/launchTbdTimeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:textColor="#0b6078"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/launch_tbdate"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/launchTbdDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dummy_placeholder"
                android:padding="4dp"
                android:textSize="18sp"
                android:textColor="#0b6078"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>



</ScrollView>